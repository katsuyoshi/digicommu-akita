%h1= link_to "デジコミュ秋田 2015", y2015_welcome_index_path

%h2
%table.table.table-borderless
  %tr
    %th{width:"120px"}
    %td
      %h3= @session["session"]["title"]

  - presenter = @session["name"]
  - if presenter
    %tr
      %th
        - if @session["id"] == "dzo"
          進行役
        - else
          発表者
      %td #{presenter}
  %tr
    %th 
    %td #{@session["title"]}
  %tr
    %th コミュニティ/団体
    %td #{@session["organization"]}

  - overview = @session["session"]["overview"]
  - if overview
    %tr
      %th 概要
      %td= raw overview.gsub(/\n/, "<br />")

%hr

= link_to "戻る", :back
